{
  "GroupName": "linkpulse-sg",
  "Description": "Security group for LinkPulse application",
  "IpPermissions": [
    {
      "IpProtocol": "tcp",
      "FromPort": 22,
      "ToPort": 22,
      "IpRanges": [{"CidrIp": "0.0.0.0/0", "Description": "SSH access"}]
    },
    {
      "IpProtocol": "tcp", 
      "FromPort": 3000,
      "ToPort": 3000,
      "IpRanges": [{"CidrIp": "0.0.0.0/0", "Description": "Frontend React app"}]
    },
    {
      "IpProtocol": "tcp",
      "FromPort": 5000, 
      "ToPort": 5000,
      "IpRanges": [{"CidrIp": "0.0.0.0/0", "Description": "Backend API"}]
    },
    {
      "IpProtocol": "tcp",
      "FromPort": 80,
      "ToPort": 80, 
      "IpRanges": [{"CidrIp": "0.0.0.0/0", "Description": "HTTP"}]
    },
    {
      "IpProtocol": "tcp",
      "FromPort": 443,
      "ToPort": 443,
      "IpRanges": [{"CidrIp": "0.0.0.0/0", "Description": "HTTPS"}]
    }
  ]
}